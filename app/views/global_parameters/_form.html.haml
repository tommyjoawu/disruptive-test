= form_for @global_parameter do |f|
  - if @global_parameter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@global_parameter.errors.count, "error")} prohibited this global_parameter from being saved:"
      %ul
        - @global_parameter.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :code
    = f.text_field :code
  .actions
    = f.submit 'Save'
